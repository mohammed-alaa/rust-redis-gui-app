{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "redis-gui",
	"version": "0.1.2",
	"identifier": "com.mohammed-alaa.redis-gui",
	"build": {
		"beforeDevCommand": "yarn dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "yarn build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "redis-gui",
				"width": 800,
				"height": 600,
				"contentProtected": false,
				"dragDropEnabled": false,
				"zoomHotkeysEnabled": false,
				"minHeight": 600,
				"minWidth": 800,
				"allowLinkPreview": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"createUpdaterArtifacts": true
	},
	"plugins": {
		"updater": {
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDhDQzUzQ0E3ODYwODBDMTUKUldRVkRBaUdwenpGakJlMEtnWkh4ZmpJVkRSUVBVNkxLakNPMFFRN2k4R1FNcnZjQUpsemhEdkkK",
			"endpoints": [
				"https://github.com/mohammed-alaa/rust-redis-gui-app/releases/latest/download/latest.json",
				"https://github.com/${{ github.repository }}/releases/latest/download/latest.json"
			]
		}
	}
}
